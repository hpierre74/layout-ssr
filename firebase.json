{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/**",
        "function": "app"
      }
    ]
  },
  "functions": {
    "source": "."
  },
  "storage": {
    "rules": "storage.rules"
  }
}
